<?xml version="1.0" encoding="utf-8"?>
<image schemaversion="7.4" name="Apex-Linux">
    <description type="system">
        <author>ackerman &amp; frost</author>
        <contact>mdzunaid384@gmail.com</contact>
        <specification>Apex Linux â€“ Tumbleweed-based Distribution</specification>
    </description>

    <preferences arch="x86_64">
        <version>1.0.4</version>
        <packagemanager>zypper</packagemanager>
        <rpm-check-signatures>false</rpm-check-signatures>
        <locale>en_US</locale>
        <keytable>us</keytable>
        <timezone>UTC</timezone>

        <type image="iso"
              volid="APEX_LINUX"
              publisher="Apex Linux Team"
              application_id="Apex Linux Live"
              filesystem="squashfs"
              flags="dmsquash"
              firmware="uefi"
              kernelcmdline="rd.luks=0 rd.lvm=0 rd.md=0">
            <bootloader name="grub2" timeout="10"/>
        </type>
    </preferences>

    <repository type="rpm-md">
        <source path="http://download.opensuse.org/tumbleweed/repo/oss/"/>
    </repository>

    <packages type="bootstrap">
